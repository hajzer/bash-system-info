LVS_p="--units M -o +devices"		# lvm2
LVS_package="lvm2"
MAIL="/usr/bin/mail"			# mailutils, mailx
MAIL_package="mailutils, mailx"
MAILQ="/usr/bin/mailq"			# postfix, sendmail-bin, smail ...
MAILQ_package="postfix, sendmail-bin, smail ..."
